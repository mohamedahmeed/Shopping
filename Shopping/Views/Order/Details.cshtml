@model Shopping.DTO.OrderDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
   
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.clientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.clientphone1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientphone1)
        </dd>
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.city.cityName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.city.cityName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.States)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.States)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
       
    </dl>
    <h2>Products :</h2><hr />
    <div class=row>
      
         @foreach (var item in @Model.Products)
       { 
           <div class=col-lg-6>
         <h4>Product Name : @item.ProductName</h4>
         <h4> Product Weight : @item.ProductWeight</h4>
                <h4>Amount : @item.Amount</h4>
           </div>
               
       }
    </div>
    
</div>
<div>
    @Html.ActionLink("Approve", "Approve", new {  id = Model.Id },new{@class="btn btn-info"}) |
    @Html.ActionLink("Regicted", "Regicted", new {  id = Model.Id },new{@class="btn btn-danger"}) 
</div>
<div>
    @if (@Model.States==Shopping.Services.Enums.states.Pending)
    {
         @Html.ActionLink("Edit", "Edit", new {  id = Model.Id },new{@class="btn btn-info"}) 
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    }
    else
    {
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    }

   
</div>
