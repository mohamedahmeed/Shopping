@model IEnumerable<Shopping.DTO.OrderDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Add">Create New</a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.clientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.clientphone1)
            </th>

            
            <th>
                @Html.DisplayNameFor(model => model.city.cityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.States)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.clientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.clientphone1)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.city.cityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.States)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                    @if (item.States == Shopping.Services.Enums.states.Pending)
                    {
                        @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })
                       @Html.ActionLink("Details", "Details", new { id = item.Id },new{@class="mx-3"}) 
                       @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                    else
                    {                      
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                    }

            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
    $('#myTable').DataTable();
} );
</script>

